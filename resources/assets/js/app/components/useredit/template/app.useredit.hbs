<div class="user-edit">

	<h1>Mettre à jour l'utilisateur: <small>{{ name }}</small> </h1>
	<hr/>
	<div class="flash-message hide"></div>

	<form id="form-user-update">
		<div class="form-group">
			<label for="email" class="col-md-3 control-label">E-mail</label>
			<div class="col-md-9">
				<input type="email" class="form-control" id="email" name="email" placeholder="{{email}}" value="{{email}}">
			</div>
		</div>
		<div class="form-group">
			<label for="name" class="col-md-3 control-label">Nom</label>
			<div class="col-md-9">
				<input type="type" class="form-control" id="name" name="name" placeholder="{{name}}" value="{{name}}">
			</div>
		</div>
		<div class="form-group">
			<label for="name" class="col-md-3 control-label">Prénom</label>
			<div class="col-md-9">
				<input type="type" class="form-control" id="firstanme" name="firstname" placeholder="{{firstname}}" value="{{firstname}}">
			</div>
		</div>
		<div class="form-group">
			<label for="created_at" class="col-md-3 control-label">Date d'inscription</label>
			<div class="col-md-9">
				<input type="input" class="form-control" id="created_at" name="created_at" placeholder="{{created_at}}">
			</div>
		</div>
		<div class="form-group radio">
			<label class="radio-inline">
			  <input type="radio" name="inlineRadioOptions" id="inlineRadio1" value="{{gender}}" checked="checked"> Femme
			</label>
			<label class="radio-inline">
			  <input type="radio" name="inlineRadioOptions" id="inlineRadio2" value="{{gender}}"> Homme
			</label>
		</div>
		<div class="form-group">
			<label for="points" class="col-md-3 control-label">Nombre de points</label>
			<div class="col-md-9">
				<input type="input" class="form-control" id="points" name="points" placeholder="{{points}}">
			</div>
		</div>
		<div class="form-group">
			<label for="role" class="col-md-3 control-label">Rôle</label>
			<div class="col-md-9">
				<input type="input" class="form-control" id="role" name="role" placeholder="{{role}}" value="{{role}}">
			</div>
		</div>
		<div class="form-group">
			<label for="updated_at" class="col-md-3 control-label">updated_at</label>
			<div class="col-md-9">
				<input type="input" class="form-control" id="updated_at" name="updated_at" placeholder="{{updated_at}}" value="{{updated_at}}">
			</div>
		</div>

		<button type="submit" class="btn btn-info" id="edit">Mettre à jour cet utilsateur</button>
	</form>

</div>