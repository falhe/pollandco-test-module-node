<div class="user-register">

	<h1>Ajouter un utilisateur</h1>
	<hr>
	<div class="flash-message hide"></div>

	<form id="form-user-update">
		<div class="form-group">
			<label for="email" class="col-md-3 control-label">E-mail</label>
			<div class="col-md-9">
				<input type="email" class="form-control" id="email" name="email" placeholder="email">
			</div>
		</div>
		<div class="form-group">
			<label for="name" class="col-md-3 control-label">Nom de famille</label>
			<div class="col-md-9">
				<input type="text" class="form-control" id="lastname" name="lastname" placeholder="Nom de famille">
			</div>
		</div>
		<div class="form-group">
			<label for="name" class="col-md-3 control-label">Username</label>
			<div class="col-md-9">
				<input type="text" class="form-control" id="name" name="name" placeholder="Username">
			</div>
		</div>
		<div class="form-group">
			<label for="name" class="col-md-3 control-label">Prénom</label>
			<div class="col-md-9">
				<input type="text" class="form-control" id="firstanme" name="firstname" placeholder="Prénom">
			</div>
		</div>
		<div class="form-group">
			<label for="created_at" class="col-md-3 control-label">Date d'inscription</label>
			<div class="col-md-9">
				<input type="text" class="form-control" id="created_at" name="created_at" placeholder="{{created_at}}" value="{{created_at}}">
			</div>
		</div>
		<div class="form-group radio">
			<label class="radio-inline">
			  <input type="radio" name="gender" id="inlineRadio1" value="1" > Femme
			</label>
			<label class="radio-inline">
			  <input type="radio" name="gender" id="inlineRadio2" value="2"> Homme
			</label>
		</div>
		<div class="form-group">
			<label for="points" class="col-md-3 control-label">Nombre de points</label>
			<div class="col-md-9">
				<input type="text" class="form-control" id="points" name="points" placeholder="0 points pour commencer" value="0">
			</div>
		</div>
		<div class="form-group">
			<label for="role" class="col-md-3 control-label">Rôle</label>
			<div class="col-md-9">
				<input type="text" class="form-control" id="role" name="role_id" placeholder="Panéliste" value="1">
			</div>
		</div>
		<button type="submit" class="btn btn-default btn-primary col-md-12" id="edit">Créer cet utilisateur</button>
	</form>

</div>
